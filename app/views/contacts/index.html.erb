<div class="container">
  <div class="contacts flex justify-stretch" data-controller="new-contact">
    <div class="contacts-left flex-1" data-controller="search-contacts">
      <div class="contacts-search">
        <h2>Search name & email</h2>
        <%= form_with url: contacts_url, method: :get,
          data: { action: "submit->search-contacts#search" }, class: "d-flex" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
          %>
          <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="contacts-list" data-search-contacts-target="list">
        <%= render "list", contacts: @contacts%>
      </div>
      <div class="contacts-footer text-center">
        <button class="border" data-action="click->new-contact#renderNew">+ Add contact</button>
      </div>
    </div>
    <div class="contacts-right w-2/5 bg-red-400" data-new-contact-target="form">
      <%= render template: "contacts/show", locals: {contact: Contact.first} %>
    </div>
  </div>
</div>
