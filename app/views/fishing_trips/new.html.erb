<div class="container mx-auto">
  <h1>FISHING TRIP</h1>
  <div class="flex items-center" data-controller="fishing-trip-input">
    <label for="name" class="mr-2">Trip Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      class="border border-gray-300 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      data-fishing-trip-input-target="nameInput"
    >
      <button
      data-action="click->fishing-trip-input#create"
        class="ml-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >
        Create Trip
      </button>
    </div>
  </div>
