<dh-component data-controller="modalhandler">
  <div class="py-12 bg-gray-700 transition duration-150 ease-in-out z-10 absolute top-0 right-0 bottom-0 left-0" id="modal" data-controller="fishing-trip-input" data-fishing-trip-input-target="modal">
    <div role="alert" class="container mx-auto w-11/12 md:w-2/3 max-w-lg">
      <%= render template: "fishing_trips/new" %>
    </div>
  </div>
  <div class="w-full flex justify-center py-12" id="button">
    <button class="focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 mx-auto transition duration-150 ease-in-out hover:bg-indigo-600 bg-indigo-700 rounded text-white px-4 sm:px-8 py-2 text-xs sm:text-sm" data-action="click->modalhandler#open">Go Fishin'</button>
  </div>
</dh-component>
