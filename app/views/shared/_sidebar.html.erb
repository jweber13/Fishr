<div>
    <span
      class="absolute text-white text-4xl top-5 left-4 cursor-pointer"
      onclick="openSidebar()"
    >
      <i class="bi bi-filter-left px-8 rounded-md"></i>
    </span>
    <div class="sidebar hidden fixed top-16 bottom-0 lg:left-0 p-2 w-[300px] overflow-y-auto text-center bg-light dark:bg-dark">
      <div class="text-gray-100 text-xl">
        <div class="p-2.5 mt-1 flex items-center">
          <h1 class="font-bold text-dark dark:text-light text-[15px] ml-3">FISHR</h1>
          <i
            class="bi bi-x cursor-pointer ml-28 lg:hidden"
            onclick="openSidebar()"
          ></i>
        </div>
        <div class="my-2 bg-gray-600 h-[1px]"></div>
      </div>
      <div
        class="p-2.5 flex items-center rounded-md px-4 duration-300 border border-2 border-dark cursor-pointer bg-light text-dark dark:text-light"
      >
        <i class="bi bi-search text-sm"></i>
        <input
          type="text"
          placeholder="Search"
          class="text-[15px] ml-4 w-full bg-transparent focus:outline-none"
        />
      </div>
      <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600 text-dark dark:text-light"
      >
        <i class="bi bi-house-door-fill"></i>
        <a href="/" class="text-[15px] ml-4 text-dark dark:text-light font-bold no-underline">Dashboard</a>
      </div>
      <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600 text-dark dark:text-light"
      >
        <a href="/contacts" class="text-[15px] ml-4 text-dark dark:text-light font-bold no-underline">Contacts</a>
      </div>
  

            <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600 text-dark dark:text-light"
      >
        <a href="/documents" class="text-[15px] ml-4 text-dark dark:text-light font-bold no-underline">Documents</a>
      </div>


            <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600 text-dark dark:text-light"
      >
        <a href="/calendar" class="text-[15px] ml-4 text-dark dark:text-light font-bold no-underline">Calendar</a>
      </div>
      <div class="my-4 bg-gray-600 h-[1px]"></div>



      
      <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-blue-600 text-white"
      >
        <% if user_signed_in? %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "text-[15px] ml-4 text-dark dark:text-light font-bold no-underline" %>
        <% else %>
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        <% end %>

      </div>
    </div>

    <div class="main-content">
      <!-- Main content goes here -->
    </div>
  </div>

    <script type="text/javascript">
      function dropdown() {
        document.querySelector("#submenu").classList.toggle("hidden");
        document.querySelector("#arrow").classList.toggle("rotate-0");
      }
      dropdown();

      function openSidebar() {
        document.querySelector(".sidebar").classList.toggle("hidden");
        document.querySelector(".main-content").classList.toggle("ml-[300px]");
      }
    </script>
